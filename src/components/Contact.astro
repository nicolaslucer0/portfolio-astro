---
// Import statements for images and any necessary scripts
import contact from "../assets/img/contact.jpeg";
import instagram from "../assets/img/social/instagram.png";
import linkedin from "../assets/img/social/linkedin.png";
import { Image } from "astro:assets";
import aboutme from "../assets/img/social/me.png";
// Assuming `radius` is a specific value you've defined, like '10px'
const radius = "10px";
---

<div class="py-20 px-4 md:px-1">
  <!-- Padding -->
  <div
    class="flex flex-col items-center justify-center m-auto mb-20 relative z-2"
    id="contact"
  >
    <h1 class="text-3xl font-bold mb-4 text-myBlue">Lets work together!</h1>
    <div class="flex justify-center items-center w-full relative md:flex-col">
      <div class="flex flex-col justify-center items-center m-auto">
        <h2 class="text-xl font-semibold mb-3 text-myBlue">
          "Life's a climb... but the view is great."
        </h2>
        <p class="mb-3 text-myBlue">
          In case you want to work with me, <a
            href="mailto:nicolas.lucero1@gmail.com"
            class="text-myBlue underline hover:underline"
            >email me to nicolas.lucero1@gmail.com</a
          >
        </p>
        <p class="text-base mb-3 text-myBlue">Here you have more links:</p>
        <div class="flex justify-center items-center w-full">
          <div
            class="flex justify-center items-center w-full p-4 relative transition duration-500 ease-in-out hover:bg-[#eaeaea73]"
          >
            <a
              href="https://about.me/nicolaslucero"
              target="_blank"
              class="m-auto"
            >
              <Image alt="" src={aboutme} class="w-10" />
              <!-- Logo -->
            </a>
          </div>
          <!-- Repeat for other links -->
          <div
            class="flex justify-center items-center w-full p-4 relative transition duration-500 ease-in-out hover:bg-[#eaeaea73]"
          >
            <a
              href="https://www.linkedin.com/in/nicolaslucer0/"
              target="_blank"
              class="m-auto"
            >
              <Image alt="" src={linkedin} class="w-10" />
            </a>
          </div>
          <div
            class="flex justify-center items-center w-full p-4 relative transition duration-500 ease-in-out hover:bg-[#eaeaea73]"
          >
            <a
              href="https://instagram.com/nicolas.tsx"
              target="_blank"
              class="m-auto"
            >
              <Image alt="" src={instagram} class="w-10" />
            </a>
          </div>
        </div>
      </div>
      <Image
        src={contact}
        alt="I will leave an easter egg, or I did it already?"
        class="z-3 w-1/3 object-contain rounded-[var(--radius)] ml-12 md:w-full md:rounded-[var(--radius)] md:ml-0"
        style={`--radius: ${radius};`}
      />
      <!-- Image -->
    </div>
  </div>
</div>
